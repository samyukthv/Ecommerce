</section>
<!-- breadcrumb start-->
<!--================End Home Banner Area =================-->

<section style="background-color: #ecfdff">
  <div class="container py-5 col-md-6">


    <div class="row ">
      <div class="col-lg-4">

        <div class="card mb-4 mt-5">
          <div class="card-body text-center">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQLlnTa1_hvfsAbfb9EH7UlbrgkufjBlwEXIw&usqp=CAU"
              alt="" class="rounded-circle img-fluid" style="width: 150px;">

            <h5 class="my-3">{{user1.firstname}}</h5>

            <p class="text-muted mb-4">{{user1.email}}</p>

            <div class="d-flex justify-content-center mb-2">

            </div>

          </div>
        </div>

      </div>


      <div class="col-md-8 border-right " style="width: 100%;">
        {{#each userdt.address}}
        <form action="/updateAddress/{{this._id}}" method="post">

          <div class="p-3 py-5" style="width: 100%;">
            <div class="d-flex justify-content-between align-items-center mb-3"> </div>

           
           
            <div class="row mt-3">
                
              <div class="col-md-12 mb-3"><label class="labels">street</label><input type="text" class="form-control"
                  placeholder="street" value="{{this.street}}" name="street"></div>
              <div class="col-md-12 mb-3"><label class="labels">district</label><input type="text" class="form-control"
                  placeholder="district" value="{{this.district}}" name="district"></div>

              <div class="col-md-12 mb-3"><label class="labels">State</label><input type="text" class="form-control"
                  placeholder="state" value="{{this.state}}" name="state"></div>


              <div class="col-md-6 mb-3"><label class="labels">Country</label><input type="text" class="form-control"
                  placeholder="country" value="{{this.country}}" name="country"></div>
              <div class="col-md-6 mb-3"><label class="labels">pincode</label><input type="number" class="form-control"
                  placeholder="pincode" value="{{this.pincode}}" name="pincode"></div>
              <input type="hidden" name="id" value="">
      
              <div class="mt-5 text-center mb-3"><button class="btn btn-primary profile-button" type="submit">Save Edit</button></div>
            </div>   
            </div>
              
          </div>
        
        </form>
                {{/each}}
      </div>

    </div>
  </div>

  </div>



</section>




{{>userFooter}}