<!doctype html>
<html lang="zxx">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>aranoz</title>
    <link rel="icon" href="/assetuser/img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assetuser/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="/assetuser/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="/assetuser/css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/assetuser/css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/assetuser/css/flaticon.css">
    <link rel="stylesheet" href="/assetuser/css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/assetuser/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="/assetuser/css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="/assetuser/css/style.css">
</head>

<body
    <!--::header part start::-->
  
{{>userHeader}}
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>otp verify</h2>
                            <p>Home <span>-</span>otp verify</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

    <!--================login_part Area =================-->
    <section class="login_part padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>Please create an account for better experience</p>
                           <a href="/Login" class="btn_3">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3> 
                                Please verify the otp received in your registered number</h3>
                                         {{#if otpVal}}
                              <div class="alert alert-danger text-center mb-3">{{otpVal}}</div>
                                 {{/if}}
                                     {{#if otpSuccess}}
                              <div class="alert alert-success text-center mb-3">{{otpSuccess}}</div>
                                 {{/if}}
                                
                            
                            <form class="row contact_form" action="/otpForgotVerifyPass" method="post" >
                                <div class="col-md-12 form-group p_star">
                                
                                     <input type="hidden" class="form-control" id="mobile" name="mobile" value="{{usermob}}">
                                     
                                    
                                    <input type="text" class="form-control" id="otp" name="otp" value=""
                                        placeholder="otp">
                                </div>
                                
                           
                                    
                                    <button type="submit" value="submit" class="btn_3">
                                        verify otp
                                    </button>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================login_part end =================-->
{{>userFooter}}
   
</body>

</html>