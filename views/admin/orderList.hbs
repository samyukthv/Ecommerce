{{>navbar}}


<div style="display: flex;">
{{>sidebar}}

<div style="margin-top: 70px; width:100%">



 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title" style="text-align: center; font-size: 28px; font-weight: bold; color: #aef7f8; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 20px;">Order List</h4>
                   
                    <div class="table-responsive">
                      <table class="table table-striped" id="Table" style="color: white;">
                        <thead>
                          <tr style="height: 50px;">
                            <th>S.No </th>
                            <th>User Name</th>
                            <th>orderId</th>
                            <th>Status</th>
                            <th>Total Bill</th>
                            <th>Order Details</th>
                           
                          </tr>
                        </thead>
                        <tbody>
                              {{#each orderfind}} 
                          <tr style="height: 50px;">
                            <td class="py-1">
                             {{inc @index}}
                            </td>
                            <td>{{userId.firstname}}</td>
                            <td>{{this.orderId}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.total}}</td>
                            {{log this._id}}
                            <td><a href="/admin/viewOrder/{{this._id}}"><button class="btn-primary"  style="height: 30px;">view details</button></a></td>
                    

                          </tr>
                         {{/each}}  
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>


              
{{>footer}}
