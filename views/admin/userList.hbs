
{{>navbar}}


<div style="display: flex;">
{{>sidebar}}

<div style="margin-top: 70px; width:100%">



 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title"  style=" text-align: center;">User List</h4>
                   
                    <div class="table-responsive">
                      <table class="table table-striped" id="Table" style="color: white;">
                        <thead>
                          <tr>
                            <th> User </th>
                            <th> First name </th>
                            <th> Last name </th>
                            <th> Email </th>
                            <th> Mobile No. </th>
                            <th> Status</th>
                            <th style="text-align: right;"> Actions</th>

                          </tr>
                        </thead>
                        <tbody>
                             {{#each data}} 
                          <tr>
                            <td class="py-1">
                              <img src="../../assets/images/faces-clipart/pic-1.png" alt="image" />
                            </td>
                            <td>{{this.firstname}}</td>
                            <td>{{this.lastname}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.mobile}}</td>
                            <td>{{this.status}}</td>
                        
                        
                            {{#if this.status}}
                                <td style="text-align: right;"><a class="me-3" href="/admin/blockUser?id={{this._id}}"> <button class="btn btn-primary">block</button></i></a>
                            {{else}}
                            <td style="text-align: right;"><a class="me-3" href="/admin/unblockUser?id={{this._id}}"> <button class="btn btn-primary">unblock</button></i></a>
                            {{/if}}
                          </tr>
                            </td>
                            

                          </tr>
                         {{/each}} 
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>


              
{{>footer}}



